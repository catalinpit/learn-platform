{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "sourceMap": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
