{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@client/*": ["./*/src"],
      "@server/*": ["./*/"]
    }
  }
}
